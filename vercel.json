{
  "version": 2,
  "name": "clocwise",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/auth",
      "dest": "/public/auth.html"
    },
    {
      "src": "/dashboard",
      "dest": "/public/dashboard.html"
    },
    {
      "src": "/debug",
      "dest": "/public/debug.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgresql://postgres:AqwHOvzToLkHXPqv@db.nayyaomcfgfaneyjhqbu.supabase.co:5432/postgres?sslmode=require",
    "JWT_SECRET": "clocwise_production_jwt_secret_key_2025"
  }
}